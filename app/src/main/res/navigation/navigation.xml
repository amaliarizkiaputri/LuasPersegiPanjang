<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/HitungLuas">

    <fragment
        android:id="@+id/HitungLuas"
        android:name="org.d3if4127.luaspersegipanjang.ui.hitung.HitungLuas"
        android:label="@string/app_name"
        tools:layout= "@layout/fragment_luas">

        <action
            android:id="@+id/action_hitungLuas_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_HitungLuas_to_historiFragment2"
            app:destination="@id/historiFragment2" />
        <action
            android:id="@+id/action_HitungLuas_to_persegiPanjangFragment"
            app:destination="@id/persegiPanjangFragment" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if4127.luaspersegipanjang.ui.about.AboutFragment"
        android:label="@string/tentang_aplikasi"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/historiFragment2"
        android:name="org.d3if4127.luaspersegipanjang.ui.histori.HistoriFragment"
        android:label="Histori Hitung "
        tools:layout="@layout/fragment_histori"/>
    <fragment
        android:id="@+id/persegiPanjangFragment"
        android:name="org.d3if4127.luaspersegipanjang.ui.persegipanjang.PersegiPanjangFragment"
        tools:layout="@layout/fragment_lihat_gambar">
        <argument
            android:name="kategori"
            app:argType="org.d3if4127.luaspersegipanjang.model.KategoriPersegiPanjang" />
    </fragment>

</navigation>